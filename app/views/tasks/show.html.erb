<div class="jumbotron">
  <h1 class="display-4">
    <strong>Task name:</strong>
    <%= @task.task_name %>
  </h1>
  <p class="lead">
    <strong>Task details:</strong>
    <%= @task.task_details %>
  </p>
  <hr class="my-4">
  <%= link_to 'Edit', edit_task_path(@task), class:"btn btn-success" %> 
  <%= link_to 'Delete', @task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  <%= link_to 'Back', tasks_path, class:"btn btn-secondary" %>
</div>
